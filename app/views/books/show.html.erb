<%= render 'users/list', user: @user, book: @newbook %>
<div class="col-lg-9">
 <h1>Book Detail</h1>
  <table class="table">
  	<tbody>
		<td><%= link_to(@book.user) do %>
		<%= attachment_image_tag(@book.user, :image, :fill, 50, 50, fallback: "No_img.jpg")%>
		</td>
		<td><%= link_to @user.name, user_path(@user) %>
		</td>
		<td><%= @book.title%></td>
		<td><%= @book.review%></td>
		<% end %>
		<% if @book.user == current_user %>
		<td><%=link_to 'Edit', edit_book_path(@book), class: 'btn-sm btn-success'%></td>
		<td><%=link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？'}, class: 'btn-sm btn-danger'%></td>
		<% end %>
	</tbody>
  </table>
</div>

<!-- 部分テンプレート用のcontainer締めのdiv -->
</div>
</div>