<%= render 'users/list', user: @user, book: @book %>
<div class="col-lg-9">
<%= form_for(@book) do |b| %>
 <% if @book.errors.any? %>
  <div class="error_explanation">
  	<h2><%= @book.errors.count %>件のエラーが発生しました</h2>
  	<ul>
  	 <% @book.errors.full_messages.each do |message| %>
  	  <li><%= message %></li>
  	 <% end %>
  	</ul>
  </div>
 <% end %>
 <h2>Editing Book</h2>
   <label class="book_title">Title</label><br>
   <%= b.text_field :title %><br>
   <label class="book_review">Review</label><br>
   <%= b.text_area :review %><br>
   <%= b.submit "送信" %><br>
   <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
<% end %>

<!-- 部分テンプレート用のcontainer締めのdiv -->
</div>
</div>
