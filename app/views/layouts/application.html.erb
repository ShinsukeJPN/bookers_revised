<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
	<nav class="navbar navbar-inverse">
      <div class="container">
        <!-- 2.ヘッダ情報 -->
        <div class="navbar-header">
            <a class="navbar-brand"><span class="glyphicon glyphicon-book" aria-hidden="true"></span>Bookers</a>
        </div>
        <!-- 3.リストの配置 -->
        <ul class="nav navbar-nav">
            <% if user_signed_in? %>
				<li class="">
					<%= link_to user_path(current_user.id) do %>
					<div class="glyphicon glyphicon-home" aria-hidden="true"><span> Home</span></div>
					<% end %>
				</li>
				<li class="">
					<%= link_to users_path do %>
					<div class="glyphicon glyphicon-user" aria-hidden="true"><span> Users</span></div>
					<% end %>
				</li>
				<li class="">
					<%= link_to books_path do %>
					<div class="glyphicon glyphicon-book" aria-hidden="true"><span> Books</span></div>
					<% end %>
				</li>
				<li class="">
					<%= link_to destroy_user_session_path, method: :delete do %>
					<div cclass="glyphicon glyphicon-log-out" aria-hidden="true"><span> Sign out</span></div>
					<% end %>
				</li>
	  		<% else %>
	  			<li class="">
	  				<%= link_to root_path do %>
					<div class="glyphicon glyphicon-home" aria-hidden="true"><span> Home</span></div>
					<% end %>
				</li>
				<li class="">
					<%= link_to about_path do %>
					<div class="glyphicon glyphicon-list-alt" aria-hidden="true"><span> About</span></div>
					<% end %>
				</li>
				<li class="">
					<%= link_to new_user_session_path do %>
					<div class="glyphicon glyphicon-log-in" aria-hidden="true"><span> Log In</span></div>
					<% end %>
				</li>
				<li class="">
					<%= link_to new_user_registration_path do %>
		 			<div class="glyphicon glyphicon-pencil" aria-hidden="true"><span> Sign Up</span></div>
		 			<% end %>
				</li>
	  		<% end %>
        </ul>
      </div>
	</nav>
  </body>
    <%= yield %>
  </body>
</html>
