<div class="container">
 <div class="row">
 	<div class="col-lg-3">
 		<h2>User Info</h2>
			<h4><span class="image_tag"><%= attachment_image_tag user, :image, :fill, 100,100, fallback: "No_img.jpg"  %></span></h4>
			<h4 class="title">Name:      <%= user.name %></h4>
			<h4 class="title">Introduction:       <%= user.introduction %></h4>
			<%= link_to edit_user_path(user) do%>
			<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
			<% end %>
		<h2>New book</h2>
 			<%= form_for(book) do |f| %>
 			 <% if book.errors.any? %>
 			   <div id="error_explanation" class="alert alert-danger">
	 		    <ul>
 			     <% book.errors.full_messages.each do |message| %>
    		    <li><%= message %></li>
       		 	<% end %>
   				</ul>
   				</div>
 	   		<% end %>
 			<h4>Title</h4>
 			<%= f.text_field :title %><br>
 			<h4>Body</h4>
 			<%= f.text_area :review %><br>
 			<%= f.submit 'Create Book'%>
 			<% end %>
 	</div>
